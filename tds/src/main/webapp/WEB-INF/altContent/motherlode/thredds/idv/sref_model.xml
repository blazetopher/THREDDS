<?xml version="1.0" encoding="UTF-8"?>
<catalog xmlns="http://www.unidata.ucar.edu/namespaces/thredds/InvCatalog/v1.0" xmlns:xlink="http://www.w3.org/1999/xlink" name="NCEP Model Data" version="1.0.1">
  <service name="latest" serviceType="Resolver" base="" />
  <service name="all" serviceType="Compound" base="">
    <service name="ncdods" serviceType="OPENDAP" base="/thredds/dodsC/" />
    <service name="HTTPServer" serviceType="HTTPServer" base="/thredds/fileServer/" />
    <service name="wcs" serviceType="WCS" base="/thredds/wcs/" />
    <service name="ncServer" serviceType="NetcdfSubset" base="/thredds/ncss/grid/"/>
  </service>
  <dataset ID="NWS/SREF" name="NWS Short Range Ensemble Forecasting">
      <metadata inherited="true">
        <documentation type="summary">NCEP Short Range Ensemble Forecast (SREF): NOAA's National Weather Service Storm Prediction Center. </documentation>
        <documentation xlink:href="http://w1.spc.woc.noaa.gov/exper/sref/" xlink:title="NCEP/SREF Website" />
        <documentation xlink:href="http://www.emc.ncep.noaa.gov/mmb/SREF/SREF.html" xlink:title="NWS/SREF Website" />
      </metadata>

    <datasetFmrc name="SREF-CONUS_40km-ensprod_biasc" collectionType="ForecastModelRuns" harvest="true" path="fmrc/NCEP/SREF/CONUS_40km/ensprod_biasc">
      <metadata inherited="true">
        <documentation type="summary">
          185 by 129 points, resolution 40 km. Models are run daily at 3,9,15,and 21Z. Forecasts every 3 hours from 3 to 87 hours.
        </documentation>
        <dataFormat>GRIB-2</dataFormat>
      </metadata>

      <netcdf xmlns="http://www.unidata.ucar.edu/namespaces/netcdf/ncml-2.2" enhance="true">
        <aggregation dimName="run" type="forecastModelRunCollection" fmrcDefinition="NCEP-SREF-CONUS_40km-ensprod_biasc.fmrcDefinition.xml" recheckEvery="15 min">
          <scan  location="/data/ldm/pub/native/grid/NCEP/SREF/CONUS_40km/ensprod_biasc/" suffix=".grib2" dateFormatMark="SREF_CONUS_40km_ensprod_biasc_#yyyyMMdd_HHmm" subdirs="true" olderThan="15 min"/>
        </aggregation>
      </netcdf>
      <fmrcInventory location="/data/ldm/pub/native/grid/NCEP/SREF/CONUS_40km/ensprod_biasc/" suffix=".grib2" fmrcDefinition="NCEP-SREF-CONUS_40km-ensprod_biasc.fmrcDefinition.xml" />
      <addTimeCoverage
              datasetNameMatchPattern="SREF_CONUS_40km_ensprod_biasc_([0-9]{4})([0-9]{2})([0-9]{2})_([0-9]{2})([0-9]{2}).grib2"
              startTimeSubstitutionPattern="$1-$2-$3T$4:$5:00" duration="180 hours"/>
    </datasetFmrc>

    <datasetFmrc name="SREF-CONUS_40km-pgrb_biasc" collectionType="ForecastModelRuns" harvest="true" path="fmrc/NCEP/SREF/CONUS_40km/pgrb_biasc">
      <metadata inherited="true">
        <documentation type="summary">
          185 by 129 points, resolution 40 km. Models are run daily at 3, 9, 15, and 21Z. Forecasts every 3 hours from 3 to 87 hours.
        </documentation>
        <dataFormat>GRIB-2</dataFormat>
      </metadata>

      <netcdf xmlns="http://www.unidata.ucar.edu/namespaces/netcdf/ncml-2.2" enhance="true">
        <aggregation dimName="run" type="forecastModelRunCollection" fmrcDefinition="NCEP-SREF-CONUS_40km-pgrb_biasc.fmrcDefinition.xml" recheckEvery="15 min">
          <scan  location="/data/ldm/pub/native/grid/NCEP/SREF/CONUS_40km/pgrb_biasc/" suffix=".grib2" dateFormatMark="SREF_CONUS_40km_pgrb_biasc_#yyyyMMdd_HHmm" subdirs="true" olderThan="15 min"/>
        </aggregation>
      </netcdf>
      <fmrcInventory location="/data/ldm/pub/native/grid/NCEP/SREF/CONUS_40km/pgrb_biasc/" suffix=".grib2" fmrcDefinition="NCEP-SREF-CONUS_40km-pgrb_biasc.fmrcDefinition.xml" />
      <addTimeCoverage
              datasetNameMatchPattern="SREF_CONUS_40km_pgrb_biasc_([0-9]{4})([0-9]{2})([0-9]{2})_([0-9]{2})([0-9]{2}).grib2"
              startTimeSubstitutionPattern="$1-$2-$3T$4:$5:00" duration="180 hours"/>
    </datasetFmrc>

  </dataset>
  
