<?xml version="1.0" encoding="UTF-8"?>
<!--
	- DispatcherServlet application context for PetClinic's web tier.
-->
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
				http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

  <bean id="rootController"
        class="thredds.server.root.RootController"
        init-method="init" destroy-method="destroy" >
    <property name="tdsContext" ref="tdsContext"/>
  </bean>

  <bean id="dataDirController"
        class="thredds.server.root.DataDirController"
        init-method="init" destroy-method="destroy" >
    <property name="tdsContext" ref="tdsContext"/>
  </bean>

  <bean id="contentController"
        class="thredds.server.root.ContentController"
        init-method="init" destroy-method="destroy" >
    <property name="tdsContext" ref="tdsContext"/>
  </bean>

  <bean id="tdsContext" class="thredds.server.config.TdsContext"/>
  <bean id="catGenContext" class="thredds.server.cataloggen.CatGenContext"/>

  <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
    <property name="mappings">
      <value>
        =rootController
        /=rootController
        /dataDir/*=dataDirController
        /content/*=contentController
      </value>
    </property>
  </bean>

  <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
    <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
    <property name="prefix" value="/WEB-INF/jsp/"/>
    <property name="suffix" value=".jsp"/>
  </bean>

</beans>